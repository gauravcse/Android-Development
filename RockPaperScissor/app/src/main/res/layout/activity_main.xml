<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#2fcbff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="       Computer Chooses :"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textAlignment="center"
        android:id="@+id/computer_choose"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text=""
        android:textColor="#f43646"
        android:layout_below="@id/computer_choose"
        android:textSize="38dp"
        android:id="@+id/choose"
        android:layout_marginTop="10dp"
        android:background="#b9ebe3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_below="@id/choose"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="PLAYER"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="25sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="COMPUTER"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="25sp"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30sp"
                android:textColor="#650000"
                android:id="@+id/play"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30sp"
                android:textColor="#650000"
                android:id="@+id/comp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="Rock"
            android:textAllCaps="true"
            android:id="@+id/rock"
            android:onClick="Rock"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="Paper"
            android:textAllCaps="true"
            android:id="@+id/paper"
            android:onClick="Paper"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="Scissor"
            android:textAllCaps="true"
            android:id="@+id/scissor"
            android:onClick="Scissor"/>
    </LinearLayout>

</RelativeLayout>
